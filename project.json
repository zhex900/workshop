{
	"name": "workshop",
	"$schema": "node_modules/nx/schemas/project-schema.json",
	"targets": {
		"build": {
			"executor": "nx:noop",
			"dependsOn": [
				"@zhex900/workshop-app:build",
				"@zhex900/workshop-utils:build",
				"@zhex900/workshop-mcp:build",
				"@zhex900/workshop-presence:build"
			]
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
			},
			"dependsOn": ["@zhex900/workshop-app:build"]
		},
		"typecheck": {
			"command": "tsc --noEmit"
		},
		"test:e2e": {
			"executor": "@nx/playwright:playwright",
			"dependsOn": ["@zhex900/workshop-app:build"]
		}
	}
}
